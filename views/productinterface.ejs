<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</head>
<style>
  *{
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  .maincontainer{
       background-color: #111;
       width: 100%;
       height: 100%;
       display: flex;
       justify-content: center;
       align-items: center;
  }
  .box{
    background-color: rgba(255, 255, 255, 0.749);
    width: 60%;
    height: auto;
    box-shadow: 1px 1px 8px 2px #d20795;
    /* box-shadow: 1px 1px 8px 2px #337fd7; */
    border-radius: 2px;
    padding-inline: 25px;
    padding-block: 20px;
    display: flex;
    flex-direction: column;
  }
  .heading{
    font-family: 'Nunito Sans', sans-serif;
    font-size: 24px;
    font-weight: bold;
    color: #000000;
    letter-spacing: 1;
  }
  .image{
    width: 50px;
    
  }
  .headingdiv{
           display: flex;
           align-items: center;
           flex-direction: row;
  }
  .formDiv{
    margin: 10px;
  }
  .gap{
    margin-bottom: 7px;
  }
  .gap:last-child{
    margin-bottom: 0;
  }

  .btn{
  width: 100%;
  background-color: #3e0318;
  cursor: pointer;
  border: 1px solid black;
}
.btn:hover{
  background-color: white;
  color: #000000;
  box-shadow: 2px 2px 10px 2px #d20795;
  border: 1px solid black;
}
.btn:active{
  background-color: #120107 !important;
  border: #000000 !important;
}
/* .form-control{
  box-shadow: #d20795 !important;
} */
</style>

<body>
  <form action="/product/productsubmit" method="post">
    <div class="maincontainer">
        <div class="box">
            <div class="headingdiv">
              <div><img src="/images/logo.webp" class="image" ></div>
              <div class="heading">Product Register</div> 
            </div>  
            <div class="formDiv">

                <div class="row  gap">
                  <div class="col-md-12">
                    <input type="text" class="form-control" placeholder="Product Name" name="productname">
                  </div>
                </div>

                <div class="row gap">
                  <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Product Type" name="producttypeid">
                  </div>
                  <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Product Category" name="productcategoryid">
                  </div>
                </div>

                <div class="row  gap">
                  <div class="col-md-12">
                    <input type="text" class="form-control" placeholder="Description" name="description">
                  </div>
                </div>

                <div class="row gap">
                  <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Product Price" name="price">
                  </div>
                  <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Product Offer" name="offer">
                  </div>
                </div>

                <div class="row gap">
                  <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Quantity" name="quantity">
                  </div>
                  <div class="col-md-6">
                    <select class="form-select" name="quantitytype" aria-label="Default select example">
                      <option selected>Quantity Type</option>
                      <option >kg</option>
                      <option >gm</option>
                      <option >ml</option>
                      <option >ltr</option>
                      <option >unit</option>
                    </select>
                  </div>
                </div>

                <div class="row gap">
                    <div class="col-md-12">
                      <label for="formFile" class="form-label">Upload Product Image</label>
                      <input class="form-control" type="file" id="formFile">
                    </div>
                </div>

                <div class="row gap">
                  <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                  <div class="col-md-6">
                    <button type="reset" class="btn btn-primary">Reset</button>
                  </div>
                </div>
                
                <div class="row  gap">
                  <div class="col-md-12">
                    <%=message%>
                  </div>
                </div>

            </div>
        </div>
    </div>
  </form>
</body>